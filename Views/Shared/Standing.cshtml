@model IEnumerable<TournamentTable>
<div>
    <style>
        .table td {
            vertical-align: unset;
        }
    </style>
    @{
        var standings = Model.Select((p, i) => new { Index = i + 1, standing = p });
        <table class="table" style="border:solid;">
            <thead style="background-color:blue; border:solid;">
                <tr>
                    <td> #    </td>
                    <td> Club </td>
                    <td> P    </td>
                    <td> W    </td>
                    <td> D    </td>
                    <td> L    </td>
                    <td> G    </td>
                    <td> D    </td>
                    <td> P    </td>
                </tr>
            </thead>
            <tbody style="background-color:azure">
                @foreach (var c in standings)
                {
                    <tr>
                        @if (c.Index == 1)
                        {
                            <td style="background-color:gold"> @c.Index </td>
                        }
                        else if (c.Index == 2)
                        {
                            <td style="background-color:silver"> @c.Index </td>
                        }
                        else if (c.Index == 3)
                        {
                            <td style="background-color:goldenrod"> @c.Index </td>
                        }
                        else
                        {
                            <td> @c.Index </td>
                        }
                        <td style="border-left:solid 1px;border-right:solid 1px;">
                            <img src="@c.standing.Flag" width="42" height="48" />
                            @c.standing.TeamName
                        </td>
                        <td> @c.standing.Played  </td>
                        <td> @c.standing.Won </td>
                        <td> @c.standing.Draw  </td>
                        <td> @c.standing.Lost </td>
                        <td> @c.standing.GoalsFor-@c.standing.GoalsAgainst </td>
                        <td> @c.standing.GoalDifference </td>
                        <td style="border-left:solid 1px;"> @c.standing.Points </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>