        <div class="col-3"> <p class="bestplayer">@p9.PlayerTeam.Player.Name</p> <p class="bpclub">@p9.PlayerTeam.Team.Name</p> </div>
        <div class="col-3"> <p class="bestplayer">@p10.PlayerTeam.Player.Name</p> <p class="bpclub">@p10.PlayerTeam.Team.Name</p> </div>
        <div class="col-3"> <p class="bestplayer">@p11.PlayerTeam.Player.Name</p> <p class="bpclub"> @p11.PlayerTeam.Team.Name</p> </div>
    </div>
    <div class="row bprow" style="height:50px;">
    </div>
</div>
<style>
    .bestplayer {
        justify-content: center;
        display: flex;
        align-items: center;
        border: solid;
        border-color: darkolivegreen;
        background-color: #90ee9094;
    }

    .bpclub {
        font-size: 12px;
        display: flex;
        justify-content: center;
        color: darkviolet;
        text-transform: uppercase;
        font-weight: bolder;
    }

    .bprow {
        justify-content: space-around;
    }

    p {
        margin: 0;
    }
</style>
