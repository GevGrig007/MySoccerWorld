    <div class="row bprow" style="height:50px;">
        <div class="col-3"> <p class="bestplayer">@p5.PlayerTeam.Player.Name</p> <p class="bpclub">@p5.PlayerTeam.Team.Name</p> </div>
        <div class="col-3"> <p class="bestplayer">@p6.PlayerTeam.Player.Name</p> <p class="bpclub"> @p6.PlayerTeam.Team.Name</p> </div>
